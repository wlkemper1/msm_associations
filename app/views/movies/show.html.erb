<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>">
          <%= @movie.director.name %></dd>
        </a>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>


<ul>
  <% @movie.characters.each do |character| %>
    <li><%= character.actor.name %> (<%= character.name %>)</li>
  <% end %>
</ul>



<form action="/create_character" method="post">
  <!-- Hidden input for authenticity token to protect from forgery -->
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="name" class="control-label">
      Character Name
    </label>
    <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
  </div>

  <div class="form-group">
    <label for="director_id" class="control-label">
      Actor
    </label>

    <%= select_tag(:actor_id,
    options_from_collection_for_select(Actor.all, :id, :name,
    @movie.actor_ids), :class => "form-control") %>

    <br>
    <p><a href="/actors/new">Or add a new actor</a></p>


<input type="hidden" name="movie_id" value="<%= @movie.id %>">

    <br>

  <button class="btn btn-success">
    Create Character
  </button>
  or
  <a href="/actors">Cancel</a>
</form>
